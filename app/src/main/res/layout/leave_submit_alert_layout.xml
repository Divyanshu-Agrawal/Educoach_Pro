<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/ssss">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top|start"
            android:focusableInTouchMode="true"
            android:focusable="true">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/siz5"
                android:layout_marginRight="@dimen/siz5"
                android:layout_marginLeft="@dimen/siz5"
                android:layout_marginBottom="@dimen/siz1"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|top|start"
                    android:focusableInTouchMode="true"
                    android:focusable="true">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/user_place_hoder"
                        android:layout_marginTop="@dimen/siz10"
                        android:layout_marginBottom="@dimen/siz10"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/siz18"
                        android:text="Confirm Application"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/siz5"
                        android:layout_marginTop="@dimen/siz20"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_gray1"
                        android:textSize="@dimen/siz12"
                        android:text="Please enter your password to submit the leave application."
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/siz5"
                        android:layout_marginTop="@dimen/siz5"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="@dimen/siz10"
                        android:backgroundTint="@color/text_gray"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:textCursorDrawable="@drawable/cursor_color1"
                        android:layout_marginRight="@dimen/siz10"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="@dimen/siz5"
                        android:layout_marginBottom="10dp"
                        android:hint="Enter Password"
                        android:textSize="@dimen/siz12"
                        android:inputType="textPassword"
                        android:id="@+id/tv_password"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_margin="@dimen/siz10"
                            android:layout_weight="0.7"
                            android:id="@+id/no"
                            android:textSize="16sp"
                            android:background="@drawable/btn_design"
                            android:text="No"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:textColor="@color/white"
                            android:id="@+id/yes"
                            android:fontFamily="ROBOTO-REGULAR.TTF"
                            android:textSize="16sp"
                            android:background="@drawable/btn_design"
                            android:layout_margin="@dimen/siz10"
                            android:text="Yes"/>
                    </LinearLayout>
                </LinearLayout></androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>