<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/siz5"
        android:layout_marginRight="@dimen/siz5"
        android:layout_marginLeft="@dimen/siz5"
        android:layout_marginBottom="@dimen/siz1"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="4">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:orientation="vertical"
                android:weightSum="4"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="2.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="15"
                        android:gravity="center|bottom"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/text_gray"
                        android:id="@+id/examDateOnly"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Date"
                        android:gravity="center|top"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:id="@+id/monthYear"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2.5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Hello"
                    android:gravity="center|start"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    android:textSize="20sp"
                    android:textColor="@color/text_gray"
                    android:layout_margin="@dimen/siz10"
                    android:id="@+id/subjectName"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:id="@+id/iv_next"
                    android:src="@drawable/ic_right_arrow_24"/>

            </LinearLayout>


        </LinearLayout></androidx.cardview.widget.CardView>

</LinearLayout>