<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/siz2"
        android:layout_marginRight="@dimen/siz2"
        android:layout_marginLeft="@dimen/siz2"
        android:layout_marginBottom="@dimen/siz2"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        app:cardCornerRadius="5dp"
        android:clipChildren="false"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="horizontal"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:weightSum="5"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/userLogo"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:visibility="visible"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/user_place_hoder"
                                android:scaleType="centerCrop"
                                android:layout_marginTop="@dimen/siz10"
                                android:layout_marginBottom="@dimen/siz10"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hello"
                            android:gravity="center|start"
                            android:visibility="visible"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:layout_marginStart="@dimen/siz10"
                            android:layout_marginEnd="@dimen/siz10"
                            android:id="@+id/clgname"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hello"
                            android:gravity="center|start"
                            android:visibility="gone"
                            android:textSize="10sp"
                            android:layout_marginTop="@dimen/siz2"
                            android:layout_marginStart="@dimen/siz10"
                            android:layout_marginEnd="@dimen/siz10"
                            android:id="@+id/batch"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/et_background_design"
                        android:layout_margin="@dimen/_10sdp"
                        android:text="On Leave"
                        android:visibility="gone"
                        android:id="@+id/tv_leave_status"
                        android:gravity="center"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:weightSum="2"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:id="@+id/rg">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/rb_present"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/green"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:id="@+id/rb_absent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/red"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_leave"
                            android:buttonTint="@color/text_gray"
                            />


                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_right_arrow_24"
                    android:scaleType="centerInside"
                    android:id="@+id/next"
                    android:visibility="gone"
                    android:tint="@color/navi_black"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>