<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mainLayoutChangePassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange"
            android:id="@+id/appBarLayout"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:weightSum="3">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                app:popupTheme="@style/MyDarkToolbarStyle"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="55dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tool_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:text="Change Password"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/background"
            android:layout_height="match_parent"
            android:id="@+id/mainLayoutLogin"
            android:weightSum="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:src="@drawable/app_logo"
                    android:scaleType="fitCenter"
                    android:id="@+id/school_logo"
                    android:layout_margin="@dimen/siz10"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/siz10"
                    android:gravity="center"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".05"
                        android:layout_height="wrap_content"
                        android:id="@+id/cube1"
                        android:background="@drawable/cube"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="@dimen/siz2"
                        android:id="@+id/view1"
                        android:background="@color/orange"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".05"
                        android:id="@+id/cube2"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cube"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/et_old_password1"
                    android:hint="Enter Old Password"
                    android:paddingLeft="@dimen/siz10"
                    android:textCursorDrawable="@drawable/cursor_color1"
                    android:textSize="@dimen/siz14"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="45dp"
                    android:textColorHint="@color/light_gray1"
                    android:background="@drawable/et_background_design"
                    android:layout_marginRight="@dimen/siz16"
                    android:textColor="@color/text_gray"
                    android:layout_marginLeft="@dimen/siz16"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    />
                <EditText
                    android:id="@+id/et_new_password2"
                    android:hint="Enter New Password"
                    android:paddingLeft="@dimen/siz10"
                    android:textCursorDrawable="@drawable/cursor_color1"
                    android:textSize="@dimen/siz14"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="45dp"
                    android:textColorHint="@color/light_gray1"
                    android:background="@drawable/et_background_design"
                    android:layout_marginRight="@dimen/siz16"
                    android:textColor="@color/text_gray"
                    android:layout_marginLeft="@dimen/siz16"
                    android:layout_marginTop="@dimen/siz20"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    />
                <EditText
                    android:id="@+id/et_con_password3"
                    android:hint="Confirm New Password"
                    android:paddingLeft="@dimen/siz10"
                    android:textCursorDrawable="@drawable/cursor_color1"
                    android:textSize="@dimen/siz14"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="45dp"
                    android:textColorHint="@color/light_gray1"
                    android:background="@drawable/et_background_design"
                    android:layout_marginRight="@dimen/siz16"
                    android:textColor="@color/text_gray"
                    android:layout_marginLeft="@dimen/siz16"
                    android:layout_marginTop="@dimen/siz20"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:weightSum="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/siz16"
                    android:layout_marginLeft="@dimen/siz16">

                    <TextView
                        android:textSize="@dimen/siz10"
                        android:id="@+id/tc"
                        android:text="*It will be changed for all the accounts associated with the number."
                        android:textColor="@color/orange"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="@dimen/siz10"
                        android:id="@+id/pas"
                        android:textColor="@color/orange"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/siz2"
                        android:layout_weight="0.5"
                        android:text="@string/passwordText"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="2"
                android:gravity="center|top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1.5">

                    <Button
                        android:text="Submit"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_design"
                        android:textSize="@dimen/siz16"
                        android:textColor="@color/white"
                        android:layout_gravity="center|top"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:id="@+id/btnChange"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Having Trouble Changing Password?"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/trouble_chng_pss"
                        android:layout_alignParentBottom="true"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
