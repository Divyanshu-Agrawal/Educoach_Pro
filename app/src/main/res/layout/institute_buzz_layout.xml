<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:weightSum="3">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/MyDarkToolbarStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="7">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5.2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start|center">

                            <TextView
                                android:id="@+id/tool_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center"
                                android:text="@string/app_name"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/logo_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="start|center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start|center">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/prof_logo1"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="@dimen/siz10"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/siz10"
                                android:scaleType="centerCrop"
                                android:src="@drawable/user_place_hoder"
                                android:visibility="visible"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:src="@drawable/ic_down_arrow_24" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:layout_margin="2dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_user_img"
                                android:layout_width="170dp"
                                android:layout_height="170dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/siz10"
                                android:layout_marginBottom="@dimen/siz10"
                                android:scaleType="centerCrop"
                                android:src="@drawable/user_place_hoder"
                                android:visibility="visible"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="2dp" />

                            <LinearLayout
                                android:id="@+id/iv_edit_layout"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignEnd="@id/iv_user_img"
                                android:layout_alignBottom="@id/iv_user_img"
                                android:background="@drawable/img_desgin_edit"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/iv_edit1"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_pencil_100" />

                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/siz5"
                        android:layout_marginTop="@dimen/siz16"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tvID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Student Name "
                                android:textColor="@color/orange"
                                android:textSize="@dimen/siz12" />

                            <TextView
                                android:id="@+id/tv_std_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:lines="1"
                                android:text="Student Name : "
                                android:textColor="@color/text_gray"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvCLASS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Batch"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/siz12" />

                                <TextView
                                    android:id="@+id/tv_std_class"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="5A"
                                    android:textColor="@color/text_gray"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tvROLLNO"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Roll Number"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/siz12" />


                                <TextView
                                    android:id="@+id/tv_std_rollnumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10"
                                    android:textColor="@color/text_gray"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/siz10"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tvCLSTEACH"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registered Number"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/siz12" />

                            <TextView
                                android:id="@+id/tv_std_cls_teacher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/text_gray"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_today_day_date"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/orange"
                            android:gravity="center"
                            android:text="Today's Date and Day"
                            android:textColor="@color/white"
                            android:textSize="@dimen/siz16"
                            android:textStyle="normal"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/announce_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.2"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="5dp"
                                    android:src="@drawable/announcement" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Quick Announcements" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:gravity="end"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:text="View All >"
                                    android:textColor="@color/colorPrimary" />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/announce_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/siz5"
                                android:layout_marginEnd="@dimen/siz5"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@color/white"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:divider="@android:color/transparent"
                                android:dividerHeight="0.0px"
                                android:elevation="8dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp"
                                app:cardPreventCornerOverlap="false">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/announcement"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_margin="5dp" />

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/loader"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                        <GridView
                            android:id="@+id/institue_lv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/tv_today_day_date"
                            android:columnWidth="100dp"
                            android:divider="@null"
                            android:dividerHeight="0dp"
                            android:gravity="center"
                            android:horizontalSpacing="0dp"
                            android:numColumns="3"
                            android:scrollbars="none"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="0dp"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/navi_black"
        android:fitsSystemWindows="true"
        android:theme="@style/NavDrawerStyle"
        app:itemIconTint="@color/white"
        app:itemTextAppearance="@style/NavDrawerTextStyle"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
