<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/siz5"
        android:layout_marginRight="@dimen/siz5"
        android:layout_marginLeft="@dimen/siz5"
        android:layout_marginBottom="@dimen/siz2"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_achive_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/siz5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/picture"
                android:background="@drawable/img_desgin"
                android:padding="@dimen/siz7"/>
<!--
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/light_gray1"/>
-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_achiv_cate"
                        android:layout_width="55dp"
                        android:background="@drawable/img_desgin"
                        android:layout_height="55dp"
                        android:layout_margin="@dimen/siz10"
                        android:src="@drawable/trophy"
                        android:layout_marginTop="@dimen/siz7"
                        android:layout_marginBottom="@dimen/siz5"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/tv_achive_title"
                        android:text="Achievements Title"
                        android:textSize="@dimen/siz16"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:layout_marginRight="@dimen/siz10"
                        android:layout_marginLeft="@dimen/siz10"
                        android:layout_marginTop="@dimen/siz10"
                        android:textColor="@color/text_gray"
                        android:layout_marginBottom="@dimen/siz2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_achive_desc"
                        android:text="Achievement Description will continue in."
                        android:textColor="@color/light_gray1"
                        android:textSize="@dimen/siz14"
                        android:layout_marginLeft="@dimen/siz10"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_marginRight="@dimen/siz10"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:id="@+id/dateLayout"
                android:background="@color/navi_black"
                android:layout_height="35dp">
                <TextView
                    android:text="18 September 2017"
                    android:textSize="@dimen/siz14"
                    android:id="@+id/tv_achive_date"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>