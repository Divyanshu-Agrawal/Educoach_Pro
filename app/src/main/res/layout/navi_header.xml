<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/headerlayout"
    android:background="@color/navi_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:gravity="center"
            android:layout_marginTop="@dimen/siz20"
            android:layout_marginLeft="@dimen/siz10"
            android:layout_marginBottom="@dimen/siz20"
            android:layout_marginRight="@dimen/siz10"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/header_img"
                android:layout_width="70dp"
                app:civ_circle_background_color="@color/white"
                android:layout_height="70dp"
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/user_place_hoder"
                android:layout_marginTop="@dimen/siz10"
                android:layout_marginBottom="@dimen/siz10"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/siz5"
            android:gravity="center|start"
            android:weightSum="3">

            <TextView
                android:text="Student Name "
                android:textColor="@color/white"
                android:textSize="@dimen/siz16"
                android:id="@+id/header_name"
                android:fontFamily="ROBOTO-REGULAR.TTF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Student/Role "
                android:textColor="@color/orange"
                android:textSize="@dimen/siz14"
                android:fontFamily="ROBOTO-REGULAR.TTF"
                android:id="@+id/header_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:padding="10dp"
            android:id="@+id/more"
            android:src="@drawable/ic_right_arrow_24"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/seperater"
        android:background="@color/seperater"/>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:id="@+id/get_more_info"
        android:visibility="visible"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Get More Info">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_bg"
            android:text="Get More Info"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:layout_margin="2dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>