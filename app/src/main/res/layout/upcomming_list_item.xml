<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/siz5"
        android:layout_marginRight="@dimen/siz5"
        android:layout_marginLeft="@dimen/siz5"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="false"
        android:layout_marginBottom="@dimen/siz1"
>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="horizontal"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Hello"
                        android:gravity="center"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:textSize="16sp"
                        android:textColor="@color/orange"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv_date"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Hello"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/orange"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tv_month_year"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Hello"
                        android:gravity="center|start"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:textSize="16sp"
                        android:textColor="@color/text_gray"
                        android:layout_margin="@dimen/siz10"
                        android:id="@+id/tv_event_name"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.5">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/iv_next"
                        android:src="@drawable/ic_right_arrow_24"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout></androidx.cardview.widget.CardView>
</LinearLayout>