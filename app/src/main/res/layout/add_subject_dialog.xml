<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="ROBOTO-REGULAR.TTF"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Select Subject*"
        android:textColor="@color/black"
        android:textSize="@dimen/siz12" />

    <Spinner
        android:id="@+id/select_subject"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:backgroundTint="@color/text_gray"
        android:fontFamily="ROBOTO-REGULAR.TTF"
        android:textColor="@color/text_gray"
        android:textColorHint="@color/light_gray1"
        android:textCursorDrawable="@drawable/cursor_color1"
        android:textSize="@dimen/siz16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="ROBOTO-REGULAR.TTF"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Subject Detail*"
        android:textColor="@color/black"
        android:textSize="@dimen/siz12" />

    <EditText
        android:id="@+id/subject_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="start|top"
        android:padding="5dp"
        android:backgroundTint="@color/text_gray"
        android:fontFamily="ROBOTO-REGULAR.TTF"
        android:hint="Enter Subject Details Here"
        android:inputType="textCapSentences|textMultiLine"
        android:textColor="@color/text_gray"
        android:textColorHint="@color/light_gray1"
        android:textCursorDrawable="@drawable/cursor_color1"
        android:textSize="@dimen/siz16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="ROBOTO-REGULAR.TTF"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Exam Date*"
        android:textColor="@color/black"
        android:textSize="@dimen/siz12" />

    <EditText
        android:id="@+id/exam_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:backgroundTint="@color/text_gray"
        android:editable="false"
        android:fontFamily="ROBOTO-REGULAR.TTF"
        android:hint="Select Exam Date"
        android:inputType="datetime"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/siz16"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="ROBOTO-REGULAR.TTF"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Subject MArks*"
        android:textColor="@color/black"
        android:textSize="@dimen/siz12" />

    <EditText
        android:id="@+id/subject_marks"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:backgroundTint="@color/text_gray"
        android:fontFamily="ROBOTO-REGULAR.TTF"
        android:gravity="start"
        android:hint="Enter Subject Marks Here"
        android:inputType="number"
        android:textColor="@color/text_gray"
        android:textCursorDrawable="@drawable/cursor_color1"
        android:textSize="@dimen/siz16" />

</LinearLayout>