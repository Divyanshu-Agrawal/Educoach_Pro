<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/siz5"
        android:layout_marginTop="@dimen/siz5"
        android:layout_marginRight="@dimen/siz5"
        android:layout_marginBottom="@dimen/siz1"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:id="@+id/examDateOnly"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/monthYear"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    android:gravity="center|top"
                    android:text="Period"
                    android:textColor="@color/light_gray1"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center|top"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:id="@+id/dairyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    android:gravity="center|start"
                    android:lines="1"
                    android:text="15"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/reportedBy"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    android:gravity="center|start|top"
                    android:lines="1"
                    android:text="Period"
                    android:textColor="@color/light_gray1"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_right_arrow_24" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>