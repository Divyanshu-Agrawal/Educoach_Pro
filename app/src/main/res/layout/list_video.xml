<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/siz5"
        android:layout_marginTop="@dimen/siz5"
        android:layout_marginEnd="@dimen/siz5"
        android:layout_marginBottom="@dimen/siz5"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/videoImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_margin="@dimen/siz5"
                    android:padding="7dp"
                    android:background="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_alignEnd="@id/videoImage"
                    android:divider="@android:color/transparent"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/start_time"
                    app:cardElevation="3dp"
                    android:visibility="gone"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@color/trans">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/timer_icon"
                            android:background="@color/trans"
                            android:padding="4dp"
                            android:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start At : "
                            android:visibility="visible"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:id="@+id/start_at"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/preview"
                android:gravity="center_vertical"
                android:textSize="@dimen/siz16"
                android:layout_marginRight="@dimen/siz10"
                android:layout_marginLeft="@dimen/siz10"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>