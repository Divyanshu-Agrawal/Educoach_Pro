<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/ssss">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top|start"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/siz5"
                android:layout_marginRight="@dimen/siz5"
                android:layout_marginLeft="@dimen/siz5"
                android:layout_marginBottom="@dimen/siz1"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|top|start"
                    android:focusableInTouchMode="true"
                    android:focusable="true">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/user_place_hoder"
                android:layout_marginTop="@dimen/siz10"
                android:layout_marginBottom="@dimen/siz10"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="ROBOTO-REGULAR.TTF"
                android:textColor="@color/light_gray1"
                android:textSize="@dimen/siz14"
                android:text="Name"
                android:layout_marginLeft="@dimen/siz5"
                android:layout_marginTop="@dimen/siz20"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/siz10"
                android:backgroundTint="@color/text_gray"
                android:layout_marginRight="@dimen/siz10"
                android:layout_marginTop="@dimen/siz5"
                android:textCursorDrawable="@drawable/cursor_color1"
                android:hint="Enter Name Here"
                android:textSize="@dimen/siz12"
                android:textColor="@color/text_gray"
                android:fontFamily="ROBOTO-REGULAR.TTF"
                android:id="@+id/tv_contact_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray1"
                android:textSize="@dimen/siz14"
                android:text="Number"
                android:fontFamily="ROBOTO-REGULAR.TTF"
                android:layout_marginLeft="@dimen/siz5"
                android:layout_marginTop="@dimen/siz20"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@drawable/cursor_color1"
                android:layout_marginLeft="@dimen/siz10"
                android:layout_marginRight="@dimen/siz10"
                android:layout_marginTop="@dimen/siz5"
                android:textColor="@color/text_gray"
                android:fontFamily="ROBOTO-REGULAR.TTF"
                android:backgroundTint="@color/text_gray"
                android:hint="Enter Number Here"
                android:textSize="@dimen/siz12"
                android:inputType="phone"
                android:maxLength="10"
                android:id="@+id/tv_contact_number"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center|start"
                        android:weightSum="3"
                        android:layout_marginTop="@dimen/siz5"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="ROBOTO-REGULAR.TTF"
                            android:textColor="@color/text_gray"
                            android:text="Choose Image"
                            android:textSize="10sp"
                            android:id="@+id/btn_choose_img"
                            android:layout_marginLeft="@dimen/siz10"
                            />
                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="16dp"
                            android:layout_height="46dp"
                            android:scaleType="centerCrop"
                            android:layout_margin="@dimen/siz10"
                            android:id="@+id/iv_setImg"
                            android:layout_gravity="center"
                            android:src="@drawable/dummy"
                            android:layout_marginLeft="@dimen/siz30"
                            />
                    </LinearLayout>
</LinearLayout></androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>