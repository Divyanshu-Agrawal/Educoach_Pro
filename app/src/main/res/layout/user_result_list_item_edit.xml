<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:id="@+id/mainLayoutLogin"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/siz2"
        android:layout_marginRight="@dimen/siz2"
        android:layout_marginLeft="@dimen/siz2"
        android:layout_marginBottom="@dimen/siz2"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="horizontal"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:weightSum="5"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/userLogo"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:visibility="visible"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/user_place_hoder"
                                android:scaleType="centerCrop"
                                android:layout_marginTop="@dimen/siz10"
                                android:layout_marginBottom="@dimen/siz10"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="Hello"
                            android:gravity="center|start"
                            android:visibility="visible"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="ROBOTO-REGULAR.TTF"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:layout_margin="@dimen/siz10"
                            android:id="@+id/clgname"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2">

                                        <EditText
                                            android:id="@+id/etMarks"
                                            android:hint="Enter Marks"
                                            android:paddingLeft="@dimen/siz10"
                                            android:layout_width="match_parent"
                                            android:textColor="@color/text_gray"
                                            android:inputType="number"
                                            android:gravity="center"
                                            android:maxLength="10"
                                            android:textCursorDrawable="@drawable/cursor_color1"
                                            android:layout_height="45dp"
                                            android:textSize="@dimen/siz12"
                                            android:paddingRight="10dip"
                                            android:background="@drawable/et_background_design"
                                            android:textColorHint="@color/text_gray"
                                            android:layout_marginRight="@dimen/siz16"
                                            android:layout_marginLeft="@dimen/siz16"
                                            android:fontFamily="ROBOTO-REGULAR.TTF"
                                            />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Hello"
                        android:gravity="center"
                        android:background="@drawable/et_background_design"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="ROBOTO-REGULAR.TTF"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:layout_margin="@dimen/siz10"
                        android:id="@+id/marksTv"/>


                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:src="@drawable/ic_right_arrow_24"
                android:tint="@color/navi_black"
                android:id="@+id/next"
                android:visibility="gone"/>


        </LinearLayout></androidx.cardview.widget.CardView>

</LinearLayout>