<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/siz5"
        android:layout_marginRight="@dimen/siz5"
        android:layout_marginLeft="@dimen/siz5"
        android:layout_marginBottom="@dimen/siz1"
        android:background="@color/white"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/leaveLayout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="4">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:weightSum="4"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center|top"
                        android:layout_weight="2.5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="15"
                            android:gravity="center"
                            android:fontFamily="ROBOTO-REGULAR.TTF"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/text_gray"
                            android:id="@+id/leaveDate"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:layout_weight="1.5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Period"
                            android:gravity="center|top"
                            android:fontFamily="ROBOTO-REGULAR.TTF"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:id="@+id/leaveMonthYear"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:weightSum="4"
                    android:layout_weight="2.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="15"
                            android:gravity="center|start"
                            android:fontFamily="ROBOTO-REGULAR.TTF"
                            android:textSize="18sp"
                            android:lines="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/text_gray"
                            android:id="@+id/leaveTitle"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Period"
                            android:lines="1"
                            android:gravity="center|start"
                            android:fontFamily="ROBOTO-REGULAR.TTF"
                            android:textSize="14sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/text_gray"
                            android:id="@+id/leaveDetails"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.5">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/iv_next"
                        android:src="@drawable/ic_right_arrow_24"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="Accept"
                    android:lines="1"
                    android:gravity="center"
                    android:background="#4e8e52"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:id="@+id/accept"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="Reject"
                    android:lines="1"
                    android:gravity="center"
                    android:background="#d34d4c"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:id="@+id/reject"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="Pending"
                    android:lines="1"
                    android:gravity="center"
                    android:background="@color/cream_yellow"
                    android:fontFamily="ROBOTO-REGULAR.TTF"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:id="@+id/status"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>