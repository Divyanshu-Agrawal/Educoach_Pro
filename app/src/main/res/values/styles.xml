<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/navi_black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">ROBOTO-REGULAR.TTF</item>
    </style>

    <style name="NavDrawerStyle" parent="AppTheme">
        <item name="android:listDivider">@color/seperater</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dropDownListViewStyle">@style/TestSpinnerStyle</item>

    </style>

    <style name="MineCustomTabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">ROBOTO-REGULAR.TTF</item>
    </style>

    <style name="TextAppearance.AppCompat.Notification.Title" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.AppCompat.Notification.Time" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.AppCompat.Notification.Info" parent="TextAppearance.AppCompat" />

    <!--alert dialog animation-->


    <style name="DialogTheme" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar.MinWidth">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
        <item name="buttonBarPositiveButtonStyle">@style/positive</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <!--Dialog text color-->

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/positive</item>
    </style>

    <style name="positive">
        <item name="android:textColor">@color/orange</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="CustomShowcaseTheme2" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/white_transparent</item>
        <item name="sv_showcaseColor">@color/text_gray</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
        <item name="android:alpha">0.5</item>
    </style>


    <!--For nevigations-->
    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#deffffff</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:alpha">0.5</item>
    </style>

    <!--Spinner-->
    <style name="TestSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/light_gray1</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="DialogThemeDate" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar.MinWidth">
        <item name="colorAccent">@color/light_gray1</item>
        <item name="colorPrimaryDark">@color/light_gray1</item>
    </style>

    <style name="AlertDialogCustom1" parent="android:Theme.Material.Light.Dialog.Alert" tools:ignore="DuplicateDefinition" tools:targetApi="lollipop">
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/text_gray</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/text_gray</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
